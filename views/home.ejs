<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Drive Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.7.0/fonts/remixicon.css" rel="stylesheet"/>
  <style>
    body {
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      min-height: 100vh;
      font-family: 'Inter', 'Raleway', sans-serif;
      color: #222;
    }
    .drive-glass {
      background: rgba(255,255,255,0.8);
      border-radius: 24px;
      box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.13);
      border: 1px solid rgba(200,200,200,0.18);
      padding: 2rem 2rem 1.5rem;
      margin: 32px auto;
      max-width: 600px;
      animation: fadeIn 0.8s;
    }
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px);}
      to { opacity: 1; transform: translateY(0);}
    }
    .drive-btn {
      background: linear-gradient(90deg, #4285F4 0%, #34A853 80%, #FBBC05 100%);
      color: #fff;
      font-weight: 600;
      border-radius: 999px;
      padding: 0.7rem 2.2rem;
      font-size: 1.1rem;
      box-shadow: 0 4px 16px rgba(66,133,244,0.18);
      transition: box-shadow .2s, transform .2s, background .2s;
    }
    .drive-btn:hover {
      background: linear-gradient(90deg, #FBBC05 0%, #34A853 50%, #4285F4 100%);
      box-shadow: 0 2px 24px rgba(66,133,244,0.38);
      transform: scale(1.04);
    }
    .gd-pop {
      background: rgba(0,0,0,.16);
      z-index: 50;
      animation: fadeIn .22s;
    }
    .gd-modal {
      background: #fff;
      border-radius: 18px;
      box-shadow: 0 2px 32px rgba(66,133,244,.13);
      width: 350px;
      max-width: 96vw;
    }
    .gd-modal-header {
      background: linear-gradient(90deg,#4285F4,#34A853 80%,#FBBC05 100%);
      border-radius: 18px 18px 0 0;
      padding: 1rem 1.2rem;
      display: flex;
      align-items: center;
      justify-content: space-between;
    }
    .gd-modal-header span {
      font-weight: 600;
      color: #fff;
      font-size: 1.15rem;
      letter-spacing: 0.02em;
      display: flex;
      align-items: center;
      gap: 6px;
    }
    .gd-modal-header button {
      background: transparent;
      border: none;
      outline: none;
      cursor: pointer;
      padding: 0.3em;
      border-radius: 50%;
      transition: background .2s;
    }
    .gd-modal-header button:hover {
      background: rgba(0,0,0,0.08);
    }
    .gd-modal-body {
      padding: 1.4rem 1.2rem;
      display: flex;
      flex-direction: column;
      gap: 1.2rem;
    }
    .gd-dropzone {
      border: 2px dashed #4285F4;
      border-radius: 13px;
      background: #f8fafc;
      padding: 1.8rem 0.5rem;
      cursor: pointer;
      transition: border-color .18s, background .18s;
      text-align: center;
    }
    .gd-dropzone:hover {
      border-color: #34A853;
      background: #e8f5e9;
    }
    .gd-dropzone i {
      font-size: 2.2rem;
      color: #4285F4;
      margin-bottom: 0.4em;
      display: block;
    }
    .gd-submit-btn {
      width: 100%;
      padding: 0.7em 0;
      border-radius: 7px;
      background: #4285F4;
      color: #fff;
      font-weight: 600;
      font-size: 1.05rem;
      border: none;
      box-shadow: 0 2px 8px rgba(66,133,244,.1);
      transition: background .15s;
      margin-top: 0.5em;
    }
    .gd-submit-btn:hover {
      background: #357ae8;
    }
    .file-list {
      width: 100%;
      margin-top: 2.2rem;
      display: flex;
      flex-direction: column;
      gap: 1.2rem;
      align-items: center;
    }
    .file-item {
      background: #fff;
      border-radius: 13px;
      box-shadow: 0 2px 9px rgba(66,133,244,.10);
      padding: 1rem 1.2rem;
      display: flex;
      align-items: center;
      gap: 1.1rem;
      width: 100%;
      max-width: 520px;
      position: relative;
      animation: fadeIn .6s;
      border: 1px solid #e0e3e6;
    }
    .file-item i {
      font-size: 1.8rem;
      color: #4285F4;
      margin-right: 6px;
    }
    .file-item p {
      margin: 0;
      font-size: 1.07rem;
      color: #333;
      font-weight: 500;
    }
    .file-date {
      font-size: 0.95rem;
      color: #34A853;
      font-weight: 500;
      margin-left: auto;
      opacity: 0.85;
    }
    @media (max-width: 700px) {
      .drive-glass, .file-item { padding: 1rem; max-width: 100%; }
      .gd-modal { width: 95vw; }
    }
  </style>
</head>

<body>
  <main class="flex flex-col items-center justify-center min-h-screen">
    <div class="drive-glass w-full max-w-2xl flex flex-col items-center">
      <button onclick="showPopUp()" class="drive-btn mb-8"><i class="ri-upload-2-line mr-2"></i> UPLOAD FILE</button>
      <!-- Files List -->
      <div class="file-list w-full flex flex-col items-center transition-all">
        <% files.forEach((file) => { %>
          <div class="file-item">
            <i class="ri-file-2-line"></i>
            <p><%= file.originalName %></p>
            <span class="file-date">
              <%= file.uploadedAt ? new Date(file.uploadedAt).toLocaleString() : '' %>
            </span>
          </div>
        <% }); %>
        <% if (files.length === 0) { %>
          <div class="file-item justify-center text-center">
            <i class="ri-folder-open-line"></i>
            <p class="text-gray-400">No files uploaded yet. Be the first!</p>
          </div>
        <% } %>
      </div>
    </div>
    <!-- Google Drive Style Upload Popup -->
    <div class="gd-pop hidden fixed top-0 left-0 flex items-center justify-center w-screen h-screen">
      <div class="gd-modal">
        <!-- Header -->
        <div class="gd-modal-header">
          <span><i class="ri-drive-fill text-[1.4rem]"></i> Upload File</span>
          <button type="button" onclick="hidePopUp()">
            <i class="ri-close-line text-white text-[1.7rem]"></i>
          </button>
        </div>
        <!-- Body -->
        <form class="gd-modal-body" action="/upload-file" method="POST" enctype="multipart/form-data">
          <label for="dropzone-file" class="gd-dropzone">
            <i class="ri-upload-cloud-2-line"></i>
            <span class="font-medium text-gray-700">Drag and drop file here</span>
            <span class="text-xs text-gray-500">or click to select file</span>
            <input id="dropzone-file" type="file" name="file" class="hidden" />
          </label>
          <button type="submit" class="gd-submit-btn">
            <i class="ri-upload-2-line mr-1"></i> Upload
          </button>
        </form>
      </div>
    </div>
  </main>
  <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"></script>
  <script>
    function showPopUp() {
      document.querySelector('.gd-pop').style.display = 'flex';
    }
    function hidePopUp() {
      document.querySelector('.gd-pop').style.display = 'none';
    }
    // Optional: Click outside modal to close
    document.addEventListener('click', function(e){
      let popup = document.querySelector('.gd-pop');
      if(popup && popup.style.display === 'flex') {
        let modal = document.querySelector('.gd-modal');
        if (!modal.contains(e.target) && !e.target.closest('.drive-btn')) {
          hidePopUp();
        }
      }
    });
    // Optional: ESC to close
    document.addEventListener('keydown', function(e){
      if(e.key === 'Escape') hidePopUp();
    });
  </script>
</body>
</html>